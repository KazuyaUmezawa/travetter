.wrapper
  .title
    .title__main
      travetter
    .title__sub
      \- make your trip better -
  .nav-bar
    %ul.nav-bar__nav
      %li.nav-bar__nav__topic
        = link_to "HOME", root_path, class: "nav_button"
      - if user_signed_in?
        %li.nav-bar__nav__topic
          = link_to "SCHEDULE", "#", class: "nav_button"
        %li.nav-bar__nav__topic
          = link_to "MYPAGE", "#", class: "nav_button"
        %li.nav-bar__nav__topic
          = link_to "LOGOUT", sign_out_path, class: "nav_button"
      - else
        %li.nav-bar__nav__topic
          = link_to "LOGIN", sign_in_path, class: "nav_button"
        %li.nav-bar__nav__topic
          = link_to "SIGN UP", new_user_registration_path, class: "nav_button"
        